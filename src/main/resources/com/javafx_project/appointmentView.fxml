<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.javafx_project.HelloApplication">

<!--// Appointment_ID

    •  Title

    •  Description

    •  Location

    •  Contact

    •  Type

    •  Start Date and Time

    •  End Date and Time

    •  Customer_ID

    •  User_ID-->

    <VBox spacing="10" xmlns:fx="http://javafx.com/fxml">
        <TableView fx:id="appointmentTable">
            <columns>
                <TableColumn fx:id="appointment_ID_Column" prefWidth="48.0" text="Appt ID" />
                <TableColumn fx:id="titleColumn" prefWidth="87.0" text="Title" />
                <TableColumn fx:id="descriptionColumn" prefWidth="173.5" text="Description" />
                <TableColumn fx:id="contactColumn" minWidth="0.0" prefWidth="88.5" text="Contact" />
                <TableColumn fx:id="typeColumn" prefWidth="102.5" text="Type" />
                <TableColumn fx:id="startDateColumn" prefWidth="81.5" text="Start Date" />
            <TableColumn fx:id="startTimeColumn" prefWidth="73.0" text="Start Time" />
                <TableColumn fx:id="endDateColumn" text="End Date" />
            <TableColumn fx:id="endTimeColumn" prefWidth="94.5" text="End Time" />
                <TableColumn fx:id="customer_ID_Column" prefWidth="89.0" text="Customer ID" />
                <TableColumn fx:id="user_ID_Column" prefWidth="54.0" text="User ID" />
            </columns>
        </TableView>
        <TextField fx:id="titleField" promptText="Title" />
        <TextField fx:id="descriptionField" promptText="Brief Description" />
      <HBox fx:id="datePickerBox" prefHeight="40.0" prefWidth="974.0">
         <children>
            <DatePicker fx:id="startDatePicker" promptText="Start Date" />
            <Separator orientation="VERTICAL" prefHeight="200.0" />
            <TextField fx:id="startTimeField" promptText="Start Time" />
            <Separator prefWidth="200.0" />
            <DatePicker fx:id="endDatePicker" layoutX="10.0" layoutY="10.0" promptText="End Date" />
            <Separator layoutX="184.0" layoutY="10.0" orientation="VERTICAL" prefHeight="200.0" />
            <TextField fx:id="endTimeField" layoutX="190.0" layoutY="10.0" promptText="End Time" />
         </children>
      </HBox>
      <HBox fx:id="comboBoxHbox">
         <children>
              <ComboBox fx:id="contactBox" promptText="Contact" />
              <ComboBox fx:id="customerBox" promptText="Customer" />
            <ComboBox fx:id="typeBox" layoutX="94.0" layoutY="10.0" promptText="Type" />
         </children>
      </HBox>
        <HBox fx:id="buttonBox" spacing="10">
            <Button fx:id="addAppointmentButton" text="Add Appointment" />
            <Button fx:id="updateAppointmentButton" text="Update Appointment" />
            <Button fx:id="deleteAppointmentButton" text="Delete Appointment" />
        </HBox>
    </VBox>


</AnchorPane>
